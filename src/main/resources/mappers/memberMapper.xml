<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.icia.wapoo.dao.MemberDao">
    <select id="selectMemberById" resultType="Member">
        SELECT *
        FROM `member`
        WHERE memberId = #{id}
    </select>

    <insert id="insertMember" useGeneratedKeys="true" keyProperty="id" parameterType="Member">
        INSERT INTO `member`
        SET `status` = 'Y',
        `name` = #{name},
        phone = #{phone},
        email = #{email},
        nickname = #{nickname},
        `role`= #{role};
    </insert>
</mapper>
